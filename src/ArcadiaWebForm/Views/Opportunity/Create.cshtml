@model ArcadiaWebForm.Models.Opportunity.OpportunityInputModel

<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="SelectedClient" class="control-label"></label>
    <select asp-for="SelectedClient" asp-items="@this.ViewData["list"] as IList<SelectListItem>" class="form-control"></select>
    <span asp-validation-for="SelectedClient" class="text-danger"></span>
</div>