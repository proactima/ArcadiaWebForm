@model ArcadiaWebForm.Models.Opportunity.View
@{
    ViewData["Title"] = "New opportunity";
}

<form asp-controller="Opportunity" asp-action="Create" method="post">
    @Html.HiddenFor(m => m.Id)

    <div class="row">
        <h2>Create new opportunity</h2>

        @Html.Partial("Create", Model.ExpectedInput, new ViewDataDictionary(this.ViewData) { { "list", Model.ClientList } })

        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}